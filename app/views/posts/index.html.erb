<% provide :main_class, "index-page" %>
<%= render "layouts/header" %>
<div class="main main-raised">
  <div class="profile-content fixed_body fix">
    <div class="row">
      <div class=" container-custom">
        <div class="row">
          <div class="col-md-2 col-xs-12">
            <div class="headline">
            <h3><%= t :categories_title %></h3>
            </div>
            <div class="card-custom">
              <div class="card-content">
                <% @categories.each do |category| %>
                  <div class="panel">
                    <div class="panel-body">
                      <h4 class="panel-title">
                        <%= link_to category.name.truncate(20), posts_path(category_id: category.id) %>
                        <a data-toggle="collapse" href="#collapse<%= category.id %>" class="pull-right">
                          <i class="material-icons">keyboard_arrow_down</i>
                        </a>
                      </h4>
                    </div>
                    <div id="collapse<%= category.id %>" class="panel-collapse collapse">
                      <% category.instance_children.each do |c| %>
                        <div class="panel-footer panel-custom">
                          <%= link_to c.name.truncate(20), posts_path(category_id: c.id) %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-10 col-xs-12">
            <div class="headline">
              <h3><%= t :tips %></h3>
            </div>
            <div class="row">
              <div class="pull-right">
                <%= form_tag search_index_path, method: :get do %>
                  <div class="row hide">
                    <div class="checkbox">
                      <label>
                        <%= check_box_tag "type[3]", Post::Tip.name, true %>
                      </label>
                    </div>
                    <div class="form-group is-empty inline label-floating ">
                      <label for="search_box" class="control-label"><%= t :search_p %></label>
                      <%= text_field_tag "keyword", nil,id: "search_box", class: "form-control", size: "40" %>
                      <span class="material-input"></span>
                      <span class="material-input"></span></div>
                      <button class="btn btn-white btn-round btn-just-icon" data-original-title="" title="" type="submit">
                      <i class="material-icons">search</i><div class="ripple-container"></div>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="row">
              <%= render @posts %>
            </div>
            <div class="row">
              <div class="paginate">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
