<% provide :main_class, "index-page" %>
<%= render "layouts/header" %>
<div class="main main-raised">
  <div class="profile-content fixed_body fix">
    <div class="container">
      <div class="row">
      <div class="headline">
        <h3><%=  t :food %></h3>
      </div>
      <div class="row">
        <div class="pull-right">
          <%= form_tag search_index_path, method: :get do %>
            <div class="row hide">
              <div class="checkbox">
                <label>
                  <%= check_box_tag "type[0]", Food.name, true %>
                </label>
              </div>
            </div>
            <div class="form-group is-empty inline label-floating ">
              <label for="search_box" class="control-label"><%= t :search_p %></label>
              <%= text_field_tag "keyword", nil,id: "search_box", class: "form-control", size: "40" %>
              <span class="material-input"></span>
              <span class="material-input"></span></div>
              <button class="btn btn-white btn-round btn-just-icon" data-original-title="" title="" type="submit">
              <i class="material-icons">search</i><div class="ripple-container"></div>
            </button>
          <% end %>
        </div>
      </div>
      <div class="row"></div>
      <div class="row">
        <%= render @foods %>
      </div>
      <div class="row">
        <div class="paginate">
          <%= paginate @foods %>
        </div>
      </div>
    </div>
  </div>
</div>
